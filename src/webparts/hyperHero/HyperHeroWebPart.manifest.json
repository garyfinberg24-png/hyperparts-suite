{
  "$schema": "https://developer.microsoft.com/json-schemas/spfx/client-side-web-part-manifest.schema.json",
  "id": "1ecae9e2-86c8-4dc2-a850-f404c2d9793c",
  "alias": "HyperHeroWebPart",
  "componentType": "WebPart",
  "version": "*",
  "manifestVersion": 2,
  "requiresCustomScript": false,
  "supportedHosts": ["SharePointWebPart", "TeamsPersonalApp", "TeamsTab", "SharePointFullPage"],
  "supportsThemeVariants": true,

  "preconfiguredEntries": [{
    "groupId": "5c03119e-3074-46fd-976b-c60198311f70",
    "group": { "default": "HyperParts" },
    "title": { "default": "HyperHero" },
    "description": { "default": "Advanced hero banner with CSS Grid layouts, video backgrounds, CTA builder, audience targeting, and dynamic content binding." },
    "officeFabricIconFontName": "ViewAll",
    "properties": {
      "title": "",
      "slides": [
        {
          "id": "default-1",
          "gridArea": "main",
          "heading": "Welcome to HyperHero",
          "subheading": "Click edit to customize this hero banner",
          "background": { "type": "solidColor", "backgroundColor": "#0078d4" },
          "gradientOverlay": { "enabled": true, "type": "linear", "angle": "180deg", "stops": [{ "color": "#000000", "opacity": 0, "position": 0 }, { "color": "#000000", "opacity": 0.6, "position": 100 }] },
          "ctas": [{ "id": "cta-1", "label": "Learn More", "url": "#", "openInNewTab": false, "variant": "primary", "iconPosition": "before" }],
          "audienceTarget": { "enabled": false, "groups": [], "matchAll": false },
          "textAlign": "left",
          "verticalAlign": "bottom",
          "sortOrder": 0,
          "enabled": true
        }
      ],
      "layouts": {
        "mobile":     { "columns": 1, "rows": 1, "gap": 0, "templateAreas": "'main'", "columnTemplate": "1fr", "rowTemplate": "300px", "height": 300 },
        "tablet":     { "columns": 1, "rows": 1, "gap": 0, "templateAreas": "'main'", "columnTemplate": "1fr", "rowTemplate": "350px", "height": 350 },
        "desktop":    { "columns": 1, "rows": 1, "gap": 0, "templateAreas": "'main'", "columnTemplate": "1fr", "rowTemplate": "400px", "height": 400 },
        "widescreen": { "columns": 1, "rows": 1, "gap": 0, "templateAreas": "'main'", "columnTemplate": "1fr", "rowTemplate": "450px", "height": 450 }
      },
      "heroHeight": 400,
      "rotation": { "enabled": false, "intervalMs": 5000, "effect": "fade", "transitionDurationMs": 500, "pauseOnHover": true, "showDots": true, "showArrows": true },
      "contentBinding": { "enabled": false, "ascending": true, "maxItems": 10, "cacheTTL": 300000, "fieldMapping": { "headingField": "Title" } },
      "abTesting": { "enabled": false, "variations": [] },
      "borderRadius": 0,
      "fullBleed": false
    }
  }]
}
